<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="false"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_product_page_titles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dropdown_transparent"
            android:gravity="center"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relativelayout_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_blue_light_sharp"
            android:clickable="true"
            android:onClick="onClickOrder"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <print.io.view.TextViewFontNormal
                android:id="@+id/textview_save_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/save_to"
                android:textColor="@color/primary_button_text"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.TextViewFontNormal
                android:id="@+id/textview_next_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/primary_button_text"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textview_save_to_cart"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:src="@drawable/icon_cart_white" />

            <print.io.view.TextViewFontLight
                android:id="@+id/textview_overlay_num_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageview_cart"
                android:layout_alignTop="@+id/imageview_cart"
                android:layout_marginRight="@dimen/cart_items_quantity_right_offset"
                android:layout_marginTop="@dimen/cart_items_quantity_top_offset"
                android:background="@drawable/icon_cart_items_qty_background"
                android:gravity="center"
                android:textColor="@color/text_cart_items_quantity"
                android:textSize="@dimen/text_size_cart_items_quantity" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_buttons"
        android:background="@color/title_bar_separator" />

    <!-- Page number -->

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_current_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="6dip"
        android:textColor="#333745"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/container_customize_product_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativelayout_help_button_info_text"
        android:layout_below="@+id/textview_current_page" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <print.io.view.CustomizeProductView
                android:id="@+id/customize_product_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dip" />
        </FrameLayout>
    </RelativeLayout>

    <!-- Tooltip, displayed over CustomizeProductView, disappears after timeout -->

    <RelativeLayout
        android:id="@+id/layout_tooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dip"
        android:layout_marginTop="4dip" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_tooltip"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:background="@drawable/bg_tooltip"
            android:ellipsize="none"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:text="@string/customize_product_tooltip_text"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="20dip"
            android:layout_height="24dip"
            android:layout_below="@+id/textview_tooltip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/arrow_up"
            android:rotation="180" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_help_button_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_photos_container" >

        <ImageView
            android:id="@+id/imageview_help_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:clickable="true"
            android:onClick="onClickHelp"
            android:src="@drawable/icon_help_circle" />

        <!-- Info text below the product -->

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#c6c8cc"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_photos_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab_bar"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageview_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:clickable="true"
            android:onClick="onClickAddMorePhotos"
            android:src="@drawable/btn_add" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:fillViewport="true"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/linearlayout_photos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Tab Bar -->

    <include
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/tab_bar"
        android:background="#ffffff"
        android:padding="3dip"
        android:visibility="visible" />

    <!-- Edit Text -->

    <include
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/edit_text"
        android:visibility="gone" />

    <!-- Autofill -->

    <include
        android:id="@+id/autofill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/autofill"
        android:visibility="gone" />

    <!-- Edit Tools -->

    <include
        android:id="@+id/edit_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab_bar"
        layout="@layout/edit_tools"
        android:visibility="gone" />

    <!-- Product options layout -->

    <RelativeLayout
        android:id="@+id/layout_product_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_bar"
        android:layout_below="@+id/view_dummy_title_separator"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="gone" >

        <GridView
            android:id="@+id/gridview_product_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:cacheColorHint="#00000000"
            android:clipToPadding="false"
            android:gravity="center"
            android:horizontalSpacing="16dip"
            android:layoutAnimation="@anim/layout_grid_fade"
            android:listSelector="@drawable/bg_blue"
            android:numColumns="4"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="6dip"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dip" />
    </RelativeLayout>

    <!-- Item Auto Arrange -->

    <include
        android:id="@+id/layout_auto_arrange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/item_auto_arrange"
        android:visibility="gone" />

</RelativeLayout>
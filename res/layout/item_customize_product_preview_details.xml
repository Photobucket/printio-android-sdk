<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="5dip" >

    <print.io.view.ButtonFontLight
        android:id="@+id/button_see_other_side"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_gravity="center"
        android:layout_marginBottom="5dip"
        android:background="@drawable/btn_blue_light"
        android:gravity="center"
        android:onClick="onClickSeeOtherSide"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:text="@string/see_other_side"
        android:textColor="@color/primary_button_text"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/phone_and_grid_type_txt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_up_left_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:paddingBottom="2dip"
            android:text="@string/device_type"
            android:textColor="#222325"
            android:textSize="@dimen/text_size_normal" />

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_up_right_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:paddingBottom="2dip"
            android:text="@string/grid_type"
            android:textColor="#222325"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_and_grid_type_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_up_left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:background="@color/green"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="@color/secondary_button_text"
            android:textSize="@dimen/text_size_normal" />

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_up_right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:background="@color/green"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="@color/secondary_button_text"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/case_color_edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_down_left_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:paddingBottom="2dip"
            android:text="@string/case_color"
            android:textColor="#222325"
            android:textSize="@dimen/text_size_normal" />

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_down_right_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:paddingBottom="2dip"
            android:text="@string/case_type_preview"
            android:textColor="#222325"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/case_type_edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_down_left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:background="@color/green"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="@color/secondary_button_text"
            android:textSize="@dimen/text_size_normal" />

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_down_right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:background="@color/green"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="@color/secondary_button_text"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

</LinearLayout>
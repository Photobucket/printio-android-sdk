<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1/3"
        android:textColor="#5a5d66"
        android:textSize="@dimen/text_size_normal" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_next_set"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_gray"
        android:clickable="true"
        android:drawableRight="@drawable/icon_arrow_right"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:onClick="onClickNextSet"
        android:paddingLeft="10dip"
        android:paddingRight="2dip"
        android:text="@string/next"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_normal" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_previous_set"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_gray"
        android:clickable="true"
        android:drawableLeft="@drawable/icon_arrow_left_white"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:onClick="onClickBack"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:text="@string/prev"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view_cart"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@drawable/bg_selector"
    android:clickable="true"
    android:onClick="onClickShoppingCartSideMenuButton"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageview_cart_sidemenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dip"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:paddingTop="10dip"
            android:src="@drawable/icon_cart_white" />

        <TextView
            android:id="@+id/sidemenu_cart_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageview_cart_sidemenu"
            android:layout_alignTop="@+id/imageview_cart_sidemenu"
            android:layout_marginRight="@dimen/cart_items_quantity_right_offset"
            android:layout_marginTop="@dimen/cart_items_quantity_top_offset"
            android:background="@drawable/icon_cart_items_qty_background_side_menu"
            android:gravity="center"
            android:textColor="@color/text_cart_items_quantity_side_menu"
            android:textSize="@dimen/text_size_cart_items_quantity" />
    </RelativeLayout>

    <print.io.view.TextViewFontLight
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/view_cart"
        android:textColor="@color/side_menu_text"
        android:textSize="@dimen/text_size_side_menu_button" />

</LinearLayout>
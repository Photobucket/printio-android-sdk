<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative_layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selector"
        android:padding="10dip"
        android:visibility="gone" >

        <print.io.view.EditTextFontLight
            android:id="@+id/edittext_search1"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/bg_edit_text"
            android:inputType="text"
            android:paddingLeft="10dip"
            android:paddingRight="30dip"
            android:textColor="#595d66"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/imageview_clear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClickClearText"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip"
            android:src="@drawable/icon_x" />
    </RelativeLayout>

    <print.io.view.GridViewAnim
        android:id="@+id/gridview_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:clipToPadding="false"
        android:horizontalSpacing="8dip"
        android:layoutAnimation="@anim/layout_grid_fade"
        android:numColumns="3"
        android:paddingBottom="90dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="4dip"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dip"
        android:visibility="visible" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_back_button"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/product_details"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/relativelayout_shopping_cart"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <include layout="@layout/button_shopping_cart" />
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/title_bar_separator" />

    <print.io.view.CustomScrollView
        android:id="@+id/scroll_view_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_dummy_title_separator"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_product_images"
                    android:layout_width="match_parent"
                    android:layout_height="302dip" />

                <!-- Indicators -->

                <LinearLayout
                    android:id="@+id/layout_images_dot_indicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_shipping"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/product_details_layout_shipping"
                android:visibility="gone" >

                <print.io.view.TextViewFontLight
                    android:id="@+id/textview_product_is_shipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="8dip"
                    android:text="@string/product_is_shipped"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_product_is_shipped"
                    android:orientation="horizontal" >

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_arrival"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/est_arrival"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_normal" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dip"
                        android:layout_marginTop="3dip"
                        android:background="#ffffff" />

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_ship_cost"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/est_ship_cost"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Create It container -->

            <include
                android:id="@+id/container_create_it"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                layout="@layout/item_product_details_buy_it"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d8d8d8" />

            <!-- Layout Items -->

            <LinearLayout
                android:id="@+id/container_product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" />

            <include
                android:id="@+id/item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                layout="@layout/item_product_details_details"
                android:visibility="visible" />

            <include
                android:id="@+id/item_shipping_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                layout="@layout/item_product_details_shipping_info"
                android:visibility="visible" />

            <include
                android:id="@+id/item_quality_guarantee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                layout="@layout/item_product_details_quality"
                android:visibility="visible" />

            <include
                android:id="@+id/item_price_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                layout="@layout/item_product_details_price_chart"
                android:visibility="gone" />
        </LinearLayout>
    </print.io.view.CustomScrollView>

    <!-- Sticky Create It container -->

    <include
        android:id="@+id/container_create_it_sticky"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@+id/view_dummy_title_separator"
        layout="@layout/item_product_details_buy_it"
        android:visibility="gone" />

    <!-- Help -->

    <include
        android:id="@+id/item_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Coming Soon -->

    <include
        android:id="@+id/item_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_coming_soon"
        android:visibility="gone" />

    <!-- For coasters product -->

    <include
        android:id="@+id/dialog_coasters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/dialog_stickerbook"
        android:visibility="gone" />

</RelativeLayout>
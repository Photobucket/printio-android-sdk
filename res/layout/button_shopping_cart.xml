<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_shopping_cart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:clickable="true"
    android:gravity="center"
    android:onClick="onClickShoppingCart" >

    <ImageView
        android:id="@+id/imageview_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="7dip"
        android:paddingLeft="6dip"
        android:paddingRight="12dip"
        android:paddingTop="7dip"
        android:src="@drawable/icon_cart" />

    <TextView
        android:id="@+id/textview_overlay_num_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview_cart"
        android:layout_alignRight="@+id/imageview_cart"
        android:layout_marginBottom="4dip"
        android:layout_marginRight="6dip"
        android:background="@drawable/bg_cart_items_qty"
        android:gravity="center"
        android:textColor="@color/cart_items_qty_text"
        android:textSize="@dimen/text_size_tiny" />

</RelativeLayout>
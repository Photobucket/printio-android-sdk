<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/layout_transparent_bottom"    android:layout_width="fill_parent"    android:layout_height="60dip"    android:background="@color/white" >        <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_toLeftOf="@+id/button_choose" >        <print.io.view.TextViewFontNormal            android:id="@+id/textview_starting_at_bottom"            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:paddingLeft="15dip"            android:paddingRight="8dip"            android:singleLine="true"            android:textColor="#323232"            android:textSize="@dimen/text_size_large"            android:textStyle="bold" />        <print.io.view.TextViewFontNormal            android:id="@+id/textview_product_name_bottom"            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_below="@+id/textview_starting_at_bottom"            android:paddingLeft="15dip"            android:paddingRight="8dip"            android:singleLine="true"            android:textColor="#c6c8cc"            android:textSize="@dimen/text_size_large"            android:visibility="invisible" />        <print.io.view.TextViewFontNormal            android:id="@+id/textview_static_price"            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_below="@+id/textview_starting_at_bottom"            android:paddingLeft="15dip"            android:paddingRight="8dip"            android:singleLine="true"            android:textColor="#c6c8cc"            android:textSize="@dimen/text_size_large" />    </RelativeLayout>    <print.io.view.ButtonFontNormal        android:id="@+id/button_choose"        android:layout_width="100dip"        android:layout_height="30dip"        android:layout_alignParentRight="true"        android:layout_centerVertical="true"        android:layout_marginRight="10dip"        android:background="@drawable/btn_green"        android:drawableRight="@drawable/icon_arrow_right"        android:onClick="onClickChoose"        android:paddingLeft="5dip"        android:paddingRight="5dip"        android:text="@string/buy_it_exclamation_mark"        android:textColor="#ffffff"        android:textSize="@dimen/text_size_normal"        android:textStyle="bold" />    <View        android:id="@+id/view_1"        android:layout_width="fill_parent"        android:layout_height="1px"        android:layout_alignParentBottom="true"        android:background="#d8d8d8" /></RelativeLayout>
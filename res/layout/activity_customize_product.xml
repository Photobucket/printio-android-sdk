<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="false"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_blue_light_sharp"
            android:clickable="true"
            android:onClick="onClickOrder"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <print.io.view.TextViewFontNormal
                android:id="@+id/textview_save_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/save_to"
                android:textColor="@color/primary_button_text"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.TextViewFontNormal
                android:id="@+id/textview_next_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/primary_button_text"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textview_save_to_cart"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:src="@drawable/icon_cart_white" />

            <print.io.view.TextViewFontLight
                android:id="@+id/textview_overlay_num_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageview_cart"
                android:layout_alignTop="@+id/imageview_cart"
                android:layout_marginRight="@dimen/cart_items_quantity_right_offset"
                android:layout_marginTop="@dimen/cart_items_quantity_top_offset"
                android:background="@drawable/bg_cart_items_qty"
                android:gravity="center"
                android:textColor="@color/text_cart_items_quantity"
                android:textSize="@dimen/text_size_cart_items_quantity" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_buttons"
        android:background="@color/title_bar_separator" />

    <!-- Page number -->

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_current_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="6dip"
        android:textColor="#333745"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/container_customize_product_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_photos"
        android:layout_below="@+id/textview_current_page"
        android:layout_marginBottom="60dip" >

        <print.io.view.CustomizeProductView
            android:id="@+id/customize_product_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <!-- Tooltip, displayed over CustomizeProductView, disappears after timeout -->

    <RelativeLayout
        android:id="@+id/layout_tooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dip"
        android:layout_marginTop="4dip" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_tooltip"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:background="@drawable/bg_tooltip"
            android:ellipsize="none"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:text="@string/customize_product_tooltip_text"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="20dip"
            android:layout_height="24dip"
            android:layout_below="@+id/textview_tooltip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/arrow_up"
            android:rotation="180" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/layout_photos"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_above="@+id/tab_bar"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:background="#ffffff"
        android:fillViewport="true"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/linearlayout_photos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageview_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:clickable="true"
                android:src="@drawable/btn_add" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Options -->

    <include
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab_bar"
        layout="@layout/item_options"
        android:visibility="gone" />
    <!-- Icon Info -->

    <ImageView
        android:id="@+id/imageview_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_photos"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:visibility="invisible" />

    <!-- Tab Bar -->

    <include
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/tab_bar"
        android:background="#ffffff"
        android:padding="3dip"
        android:visibility="visible" />

    <!-- Edit Text -->

    <include
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/edit_text"
        android:visibility="gone" />

    <!-- Autofill -->

    <include
        android:id="@+id/autofill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/autofill"
        android:visibility="gone" />

    <!-- Help -->

    <include
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/help"
        android:visibility="gone" />

    <!-- Info text below the product -->

    <print.io.view.AutoResizeTextView
        android:id="@+id/textview_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_customize_product_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dip"
        android:gravity="center"
        android:textColor="#c6c8cc"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <!-- Edit Tools -->

    <include
        android:id="@+id/edit_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab_bar"
        layout="@layout/edit_tools"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageview_help_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_photos"
        android:layout_marginLeft="15dp"
        android:clickable="true"
        android:minHeight="45dp"
        android:minWidth="45dp"
        android:onClick="onClickHelp"
        android:src="@drawable/icon_help_circle" />

    <!-- Dialog Discard -->

    <include
        android:id="@+id/dialog_discard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/dialog_discard"
        android:clickable="true"
        android:visibility="gone" />

    <!-- Help -->

    <include
        android:id="@+id/item_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Item Customize Product Preview Details -->

    <include
        android:id="@+id/layout_preview_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/item_customize_product_preview_details"
        android:visibility="gone" />

    <!-- Item Auto Arragne -->

    <include
        android:id="@+id/layout_auto_arrange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/item_auto_arrange"
        android:visibility="gone" />

    <!-- Dialog Info -->

    <include
        android:id="@+id/dialog_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/dialog_info"
        android:clickable="true"
        android:visibility="gone" />

    <!-- Dialog Want to share -->

    <include
        android:id="@+id/dialog_want_to_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/dialog_want_to_share"
        android:clickable="true"
        android:visibility="gone" />

    <!-- Edit Image -->

    <include
        android:id="@+id/edit_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/edit_image"
        android:visibility="gone" />

    <!-- Coming Soon -->

    <include
        android:id="@+id/item_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_coming_soon"
        android:visibility="gone" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="false"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_back_button"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_shipping_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/checkout"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/relativelayout_shopping_cart"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <include layout="@layout/button_shopping_cart" />
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/title_bar_separator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_subtotal"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_margin="3dip"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- Fill In -->

            <RelativeLayout
                android:id="@+id/layout_fill_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="2dip" >

                <print.io.view.TextViewFontNormal
                    android:id="@+id/textview_fill_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/fill_in"
                    android:textColor="#323232"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:id="@+id/layout_shipping_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_fill_in"
                    android:layout_marginTop="10dip" >

                    <print.io.view.EditTextFontNormal
                        android:id="@+id/edittext_first_name"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:background="@color/bg_edit_text"
                        android:hint="@string/first_name"
                        android:inputType="textCapWords"
                        android:nextFocusDown="@+id/edittext_last_name"
                        android:padding="7dip"
                        android:singleLine="true"
                        android:textColor="#b3b3b3"
                        android:textColorHint="#b3b3b3"
                        android:textSize="@dimen/text_size_normal" />

                    <print.io.view.EditTextFontNormal
                        android:id="@+id/edittext_last_name"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:layout_weight="1"
                        android:background="@color/bg_edit_text"
                        android:hint="@string/last_name"
                        android:inputType="textCapWords"
                        android:nextFocusDown="@+id/edittext_email"
                        android:padding="7dip"
                        android:singleLine="true"
                        android:textColor="#b3b3b3"
                        android:textColorHint="#b3b3b3"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <print.io.view.EditTextFontNormal
                    android:id="@+id/edittext_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_shipping_name"
                    android:layout_marginTop="6dip"
                    android:background="@color/bg_edit_text"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/edittext_state"
                    android:padding="7dip"
                    android:singleLine="true"
                    android:textColor="#b3b3b3"
                    android:textColorHint="#b3b3b3"
                    android:textSize="@dimen/text_size_normal" />

                <print.io.view.EditTextFontNormal
                    android:id="@+id/edittext_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edittext_email"
                    android:layout_marginTop="6dip"
                    android:background="@color/bg_edit_text"
                    android:hint="@string/state"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@+id/edittext_zip_code"
                    android:padding="7dip"
                    android:singleLine="true"
                    android:textColor="#b3b3b3"
                    android:textColorHint="#b3b3b3"
                    android:textSize="@dimen/text_size_normal" />

                <!-- Zip Code -->

                <LinearLayout
                    android:id="@+id/layout_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edittext_state"
                    android:layout_marginTop="6dip" >

                    <print.io.view.EditTextFontNormal
                        android:id="@+id/edittext_zip_code"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:background="@color/bg_edit_text"
                        android:hint="@string/zip_code"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@+id/edittext_city"
                        android:padding="7dip"
                        android:singleLine="true"
                        android:textColor="#b3b3b3"
                        android:textColorHint="#b3b3b3"
                        android:textSize="@dimen/text_size_normal" />

                    <print.io.view.EditTextFontNormal
                        android:id="@+id/edittext_city"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:layout_weight="3"
                        android:background="@color/bg_edit_text"
                        android:hint="@string/city"
                        android:inputType="textCapWords"
                        android:nextFocusDown="@+id/edittext_address_1"
                        android:padding="7dip"
                        android:singleLine="true"
                        android:textColor="#b3b3b3"
                        android:textColorHint="#b3b3b3"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <!-- Address 1 -->

                <print.io.view.EditTextFontNormal
                    android:id="@+id/edittext_address_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_zip"
                    android:layout_marginTop="6dip"
                    android:background="@drawable/bg_edit_text_red"
                    android:hint="@string/address_blank"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@+id/edittext_address_2"
                    android:padding="7dip"
                    android:singleLine="true"
                    android:textColor="#b3b3b3"
                    android:textColorHint="#b3b3b3"
                    android:textSize="@dimen/text_size_normal" />

                <!-- Address 2 -->

                <print.io.view.EditTextFontNormal
                    android:id="@+id/edittext_address_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edittext_address_1"
                    android:layout_marginTop="6dip"
                    android:background="@color/bg_edit_text"
                    android:hint="@string/address_2"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@+id/edittext_area_num"
                    android:padding="7dip"
                    android:singleLine="true"
                    android:textColor="#b3b3b3"
                    android:textColorHint="#b3b3b3"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:id="@+id/layout_business_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edittext_address_2"
                    android:layout_marginTop="6dip"
                    android:background="#efeff2"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <CheckBox
                        android:id="@+id/checkbox_business_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:button="@drawable/checkbox_x"
                        android:padding="5dip" />

                    <print.io.view.TextViewFontNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_business_address"
                        android:textColor="#323232" />
                </LinearLayout>

                <!-- Telephone -->

                <LinearLayout
                    android:id="@+id/layout_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_business_address"
                    android:layout_marginTop="6dip" >

                    <print.io.view.EditTextFontNormal
                        android:id="@+id/edittext_area_num"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:background="@color/bg_edit_text"
                        android:inputType="phone"
                        android:nextFocusDown="@+id/edittext_telephone_num"
                        android:padding="7dip"
                        android:singleLine="true"
                        android:textColor="#b3b3b3"
                        android:textColorHint="#b3b3b3"
                        android:textSize="@dimen/text_size_normal" />

                    <print.io.view.EditTextFontNormal
                        android:id="@+id/edittext_telephone_num"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:layout_weight="3"
                        android:background="@color/bg_edit_text"
                        android:hint="@string/telephone_number"
                        android:inputType="phone"
                        android:padding="7dip"
                        android:singleLine="true"
                        android:textColor="#b3b3b3"
                        android:textColorHint="#b3b3b3"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_fill_in"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <LinearLayout
                    android:id="@+id/layout_shipping_methods_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <!-- Proceed -->

            <print.io.view.ButtonFontLight
                android:id="@+id/button_proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_fill_in"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/btn_blue_light"
                android:onClick="onClickProceed"
                android:padding="8dip"
                android:text="@string/proceed"
                android:textColor="@color/primary_button_text" />

            <print.io.view.TextViewFontNormal
                android:id="@+id/textview_find_shipping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_proceed"
                android:layout_marginTop="5dip"
                android:text="@string/find_shipping_address"
                android:textColor="#323232"
                android:textSize="@dimen/text_size_normal" />

            <!-- FedEX -->

            <RelativeLayout
                android:id="@+id/layout_fedex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_find_shipping_address"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="#efeff2"
                android:padding="8dip" >

                <ImageView
                    android:id="@+id/imageview_fedex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/icon_fedex" />

                <TextView
                    android:id="@+id/textview_fedex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageview_fedex"
                    android:text="FedEX"
                    android:textColor="#323232"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <!-- UPS -->

            <RelativeLayout
                android:id="@+id/layout_ups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_fedex"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="#efeff2"
                android:padding="8dip" >

                <ImageView
                    android:id="@+id/imageview_ups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/icon_ups" />

                <TextView
                    android:id="@+id/textview_ups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageview_ups"
                    android:text="UPS"
                    android:textColor="#323232"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/layout_find_shipping_method"
                android:background="#ffffff"
                android:paddingBottom="7dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="7dip"
                android:visibility="gone" >

                <print.io.view.TextViewFontLight
                    android:id="@+id/textview_total_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="3dip"
                    android:text="@string/total_price"
                    android:textColor="#323232"
                    android:textSize="@dimen/text_size_normal" />

                <RelativeLayout
                    android:id="@+id/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" >

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/button_shipping_method"
                        android:paddingRight="5dip"
                        android:textColor="#323232"
                        android:textSize="@dimen/text_size_huge" />

                    <print.io.view.ButtonFontLight
                        android:id="@+id/button_shipping_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_blue_light"
                        android:onClick="onClickShippingMethod"
                        android:paddingBottom="8dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="8dip"
                        android:text="@string/shipping_method"
                        android:textColor="@color/primary_button_text"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- Find Shipping Method -->

    <RelativeLayout
        android:id="@+id/button_find_shipping_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/btn_blue_light"
        android:onClick="onClickFindShippingMethod"
        android:padding="10dip"
        android:visibility="visible" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_find_shipping_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/find_shipping_method"
            android:textColor="@color/primary_button_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow" />
    </RelativeLayout>

</RelativeLayout>
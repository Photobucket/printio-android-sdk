<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_window_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="0dip"
            android:paddingRight="15dip"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/imageview_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:src="@drawable/btn_menu_black"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_top_left_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_menu_back"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_all_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/all_products"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageview_search"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageview_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClickSearch"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="10dip"
            android:src="@drawable/btn_search"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_menu_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/relativelayout_shopping_cart"
            android:padding="10dip"
            android:src="@drawable/btn_menu_black"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relativelayout_shopping_cart"
            android:layout_width="45dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClickShoppingCart" >

            <ImageView
                android:id="@+id/imageview_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="10dip"
                android:src="@drawable/icon_cart" />

            <TextView
                android:id="@+id/textview_overlay_num_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageview_cart"
                android:layout_alignRight="@+id/imageview_cart"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="1dip"
                android:background="@drawable/bg_cart_items_qty"
                android:gravity="center"
                android:textColor="@color/cart_items_qty_text"
                android:textSize="@dimen/text_size_tiny" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/title_bar_separator" />

    <EditText
        android:id="@+id/edittext_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_margin="10dip"
        android:inputType="text"
        android:visibility="gone" />

    <GridView
        android:id="@+id/gridview_product"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/edittext_search"
        android:layout_marginBottom="0dip"
        android:cacheColorHint="#00000000"
        android:clipToPadding="false"
        android:horizontalSpacing="3dip"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:padding="5dip"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dip" >
    </GridView>

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_featured_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_titlebar"
        android:layout_margin="2dip"
        android:background="@drawable/btn_gray"
        android:clickable="true"
        android:onClick="onClickFeatureProducts"
        android:padding="7dip"
        android:text="@string/side_menu_featured_products"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <include
        android:id="@+id/overlay_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/overlay_buttons" />

    <!-- Help -->

    <include
        android:id="@+id/item_help"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Please try again dialog -->

    <include
        android:id="@+id/dialog_please_try_again"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/dialog_please_try_again"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="120dip"
    android:paddingBottom="8dip"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingTop="8dip" >

    <ImageView
        android:id="@+id/imageview_thick_print"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_size_inch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_thick_print"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_normal" />

    <print.io.view.TextViewFontBold
        android:id="@+id/textview_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_size_inch"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_normal" />

    <print.io.view.TextViewFontBold
        android:id="@+id/textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_set"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white"
        android:padding="8dip" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_please_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="16dip"
            android:paddingTop="8dip"
            android:text="@string/please_try_again"
            android:textColor="#5a5d66"
            android:textSize="@dimen/text_size_normal" />

        <print.io.view.ButtonFontLight
            android:id="@+id/button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_please_try_again"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_yes"
            android:gravity="center"
            android:onClick="onClickOk"
            android:padding="8dip"
            android:text="@string/ok"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</RelativeLayout>
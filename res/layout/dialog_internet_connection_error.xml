<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:minWidth="300dip"
    android:orientation="vertical"
    android:padding="16dip" >

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dip"
        android:text="@string/internet_connection_error"
        android:textColor="#5a5d66"
        android:textSize="@dimen/text_size_title" />

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <print.io.view.ButtonFontLight
            android:id="@+id/button_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_light"
            android:lineSpacingExtra="1dp"
            android:paddingBottom="8dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="8dip"
            android:text="@string/cancel"
            android:textColor="@color/primary_button_text"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <print.io.view.ButtonFontLight
            android:id="@+id/button_retry"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/btn_green"
            android:lineSpacingExtra="1dp"
            android:paddingBottom="8dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="8dip"
            android:text="@string/retry"
            android:textColor="@color/secondary_button_text"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
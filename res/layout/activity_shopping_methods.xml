<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_back_button"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_image_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text="@string/shopping_methods"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageview_edit"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageview_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClickEdit"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="10dip"
            android:src="@drawable/btn_edit"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/title_bar_separator" />

    <RelativeLayout
        android:id="@+id/dummy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:background="#ffffff"
        android:paddingBottom="6dip" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_fill_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:text="@string/fill_address"
            android:textColor="#323232" />

        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_fill_address"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="15dip" >

            <EditText
                android:id="@+id/edittext_first_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:background="@color/bg_edit_text"
                android:hint="@string/first_name"
                android:padding="7dip"
                android:textColor="#b3b3b3"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/edittext_last_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_weight="1"
                android:background="@color/bg_edit_text"
                android:hint="@string/last_name"
                android:padding="7dip"
                android:textColor="#b3b3b3"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/edittext_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_name"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6dip"
            android:background="@color/bg_edit_text"
            android:hint="@string/state"
            android:padding="7dip"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:id="@+id/layout_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_state"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6dip" >

            <EditText
                android:id="@+id/edittext_zip_code"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:background="@color/bg_edit_text"
                android:hint="@string/zip_code"
                android:padding="7dip"
                android:textColor="#b3b3b3"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/edittext_city"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_weight="3"
                android:background="@color/bg_edit_text"
                android:hint="@string/city"
                android:padding="7dip"
                android:textColor="#b3b3b3"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/edittext_address_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_zip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6dip"
            android:background="@color/bg_edit_text"
            android:hint="@string/address_1"
            android:padding="7dip"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/edittext_address_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_address_1"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6dip"
            android:background="@color/bg_edit_text"
            android:hint="@string/address_2"
            android:padding="7dip"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:id="@+id/layout_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_address_2"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6dip" >

            <EditText
                android:id="@+id/edittext_area_num"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:background="@color/bg_edit_text"
                android:hint="+49"
                android:padding="7dip"
                android:textColor="#b3b3b3"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/edittext_telephone_num"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_weight="3"
                android:background="@color/bg_edit_text"
                android:hint="@string/telephone_number"
                android:padding="7dip"
                android:textColor="#b3b3b3"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Find Shipping Method -->

    <RelativeLayout
        android:id="@+id/layout_find_shipping_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dummy"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:background="@drawable/btn_blue_light"
        android:onClick="onClickFindShippingMethod"
        android:paddingBottom="13dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="13dip"
        android:visibility="visible" >

        <print.io.view.TextViewFontLight
            android:id="@+id/button_find_shipping_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/find_shipping_method"
            android:textColor="@color/primary_button_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="3dip"
        android:background="#ffffff"
        android:padding="8dip" >

        <print.io.view.TextViewFontNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textview_total_price"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:text="@string/total_price"
            android:textColor="#323232"
            android:textSize="@dimen/text_size_normal" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="$15.00"
            android:textColor="#323232"
            android:textSize="@dimen/text_size_huge" />
    </RelativeLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/overlay_buttons" />

    <!-- Help -->

    <include
        android:id="@+id/item_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Coming Soon -->

    <include
        android:id="@+id/item_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_coming_soon"
        android:visibility="gone" />

</RelativeLayout>
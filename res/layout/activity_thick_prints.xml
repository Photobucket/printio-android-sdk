<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />

            <ImageView
                android:id="@+id/imageview_top_left_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_customize_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/choose_options"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dip"
            android:paddingRight="10dip"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/title_bar_separator" />

    <!-- The Squares -->

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_step_1_thick_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        android:gravity="center"
        android:padding="7dip"
        android:text="@string/step_1_thick_prints"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_large" />

    <View
        android:id="@+id/view_dummy_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/textview_step_1_thick_price"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/step_separator" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_squares"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_green_rounded"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingTop="3dip"
        android:text="@string/squares"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_normal" />

    <HorizontalScrollView
        android:id="@+id/layout_squares_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_squares"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="20dip"
        android:fillViewport="true"
        android:paddingBottom="5dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/linearlayout_choose_size_set_squares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" />
    </HorizontalScrollView>

    <!-- The Usuals -->

    <View
        android:id="@+id/view_dummy_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_squares_scroll"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:background="@color/step_separator" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_usuals"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_green_rounded"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingTop="3dip"
        android:text="@string/usuals"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_normal" />

    <HorizontalScrollView
        android:id="@+id/layout_usuals_scrool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_usuals"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="20dip"
        android:fillViewport="true"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/linearlayout_choose_size_set_usuals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" />
    </HorizontalScrollView>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/overlay_buttons" />

    <!-- Help -->

    <include
        android:id="@+id/item_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Coming Soon -->

    <include
        android:id="@+id/item_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_coming_soon"
        android:visibility="gone" />

</RelativeLayout>
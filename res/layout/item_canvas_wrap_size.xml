<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="4dip" >

    <ImageView
        android:id="@+id/imageview_canvas_wrap_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:paddingTop="2dp" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_canvas_wrap_size_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_canvas_wrap_size"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_canvas_wrap_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_canvas_wrap_size_1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_normal" />

    <print.io.view.TextViewFontBold
        android:id="@+id/textview_canvas_wrap_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_canvas_wrap_size"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>
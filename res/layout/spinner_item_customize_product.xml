<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textview_options"
    android:layout_marginTop="5dip" >

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_print_type"
        android:gravity="center|left"
        android:hint="@string/choose_print_type"
        android:paddingLeft="10dip"
        android:scaleType="fitXY" />

    <print.io.view.TextViewFontNormal
        android:id="@+id/textview_inch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:text=""
        android:textColor="#323232"
        android:textSize="@dimen/text_size_normal" />

    <print.io.view.TextViewFontNormal
        android:id="@+id/textview_print_type_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dip"
        android:text=""
        android:textColor="#323232"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>
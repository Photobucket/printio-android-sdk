<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selector_swipeable" >

    <ImageView
        android:id="@+id/imageview_print_size"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@drawable/placeholder_flag"
        android:scaleType="centerCrop"
        android:layout_margin="5dp" />

    <print.io.view.TextViewFontNormal
        android:id="@+id/textview_print_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageview_print_size"
        android:text="12x12 Print"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_normal" />

    <print.io.view.TextViewFontBold
        android:id="@+id/textview_print_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageview_arrow_forward"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_normal"
        android:text="$21.50"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/imageview_arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="15dip"
        android:paddingRight="15dp"
        android:src="@drawable/icon_forward_grey" />

</RelativeLayout>
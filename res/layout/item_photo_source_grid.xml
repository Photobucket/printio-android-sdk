<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/folder_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/foler_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="6dip" >

            <print.io.imageloader.MyImageViewSquare
                android:id="@+id/imageview_folder_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <print.io.view.TextViewFontLight
                android:id="@+id/textview_folder_photos_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-1dip"
                android:layout_marginRight="-1dip"
                android:background="#478cd1"
                android:padding="3dip"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foler_image_container"
            android:layout_marginTop="-8dip"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1"
            android:lines="2"
            android:padding="5dip"
            android:textColor="#797c83"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <print.io.imageloader.MyImageViewSquare
            android:id="@+id/imageview_photo_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/overlay_translucent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_translucent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageview_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_check_white"
            android:visibility="invisible" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_photo_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageview_photo_image"
            android:layout_alignRight="@+id/imageview_photo_image"
            android:layout_marginBottom="4dip"
            android:layout_marginRight="4dip"
            android:background="@drawable/bg_white_transparent"
            android:gravity="center"
            android:minHeight="24dip"
            android:minWidth="24dip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_normal"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>